<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("ttv.list", :default => "List")}", questions_path  %></li>
      <li><%= link_to "#{t("ttv.new", :default => "New")}", new_question_path %></li>
      <li class="active"><%= link_to "#{t("ttv.edit", :default => "Edit")}", edit_question_path %></li>
    </ul>
  </div>          
  <div class="content">            
    <h2 class="title"><%= t("ttv.edit", :default => "Edit") %> Question</h2>
    <div class="inner">
      <% form_for @question, :url => question_path(@question), :html => { :class => :form } do |f| -%>
        <%= render :partial => "form", :locals => {:f => f} %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
