<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first">
        <%= link_to "#{t("ttv.list", :default => "List")}", questions_path %>
      </li>
      <li>
        <%= link_to "#{t("ttv.new", :default => "New")}", new_question_path %>
      </li>
      <li class="active">
        <%= link_to "#{t("ttv.show", :default => "Show")}", question_path %>
      </li>
    </ul>
  </div>
  <div class="content">
    <div class="inner">
      <p>
        <b><%= t("ttv.display_name", :default => "Question") %>:</b>
        <%= @question.display_name %>
      </p>
	  <p>
        <b><%= t("ttv.text", :default => "Text") %>:</b>
        <%= @question.question %>
      </p>

      <p>
        <b><%= t("ttv.district", :default => "District") %>:</b>
        <%= @question.requesting_district.display_name %>
      </p>
      <p>
        <b><%= t("ttv.election", :default => "Election") %>:</b>
        <%= @question.election.display_name %>
      </p>
      <p>
        <b><%= t("ttv.order", :default => "Order") %>:</b>
        <%= "@question.position" %>
      </p>
      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("ttv.edit", :default=> "Edit")}")} #{t("ttv.edit", :default=> "Edit")}", edit_question_path(@question), :class => "button" %>
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("ttv.delete", :default=> "Delete")}")} #{t("ttv.delete", :default=> "Delete")}", question_path(@question), :method => "delete", :class => "button", :confirm => "#{t("ttv.are_you_sure", :default => "Are you sure?")}" %>
      </div>
    </div>
  </div>
</div>
<% content_for :sidebar, render(:partial => 'sidebar') -%>
