<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first">
        <%= link_to "#{t("ttv.list", :default => "List")}", current_jurisdictions_path %>
      </li>
      <% if can? :create, Election %> 
      <li>
        <%= link_to "#{t("ttv.new", :default => "New")}", new_election_path %>
      </li>
      <% end %>
      <li class="active">
        <%= link_to "#{t("ttv.show", :default => "Show")}", election_path %>
      </li>
    </ul>
  </div>
  <div class="content">
    <div class="inner">
      <p>
        <b><%= t("ttv.display_name", :default => "Display Name") %>:</b>
        <%= @election.display_name %>
      </p>
      <p>
        <b><%= t("ttv.jurisdiction", :default => "Jurisdiction") %>:</b>
        <%= DistrictSet.find_by_id(@election.district_set_id).display_name %>
      </p>
      <p>
        <b><%= t("ttv.default_voting_method", :default => "Default Voting Method") %>:</b>
        <%= link_to VotingMethod.find(@election.default_voting_method_id).display_name , edit_voting_method_path(VotingMethod.find(@election.default_voting_method_id)) %>
      </p>
      <p>
        <b><%= t("ttv.ballot_style_template", :default => "Ballot Style Template") %>:</b>
        <% unless @election.ballot_style_template_id == nil %>
        <%= link_to BallotStyleTemplate.find(@election.ballot_style_template_id).display_name ,edit_ballot_style_template_path(BallotStyleTemplate.find(@election.ballot_style_template_id)) %>
        <% end -%>
      </p>
      <p>
        <b><%= t("ttv.start_date", :default => "Start date") %>:</b>
        <%= @election.start_date %>
      </p>
      <p>
        <%= link_to "#{t("ttv.download_all_ballots", :default => "Download All ballots")}", ballots_election_precinct_path(@election) %>
      </p>
	  <p>
        <%= link_to "#{t("ttv.ballot", :default => "Download Ballot Mapping File")}", ballot_map_election_path(@election) %>	  	
	  </p>
      <div class="wat-cf">
      <% if can? :create, Election %> 
        <%= button_link_helper("web-app-theme/application_edit.png", "edit", "Edit", edit_election_path(@election)) %>
      <% end %>
      <% if can? :destroy, Election %> 
        <%= button_link_helper("web-app-theme/cross.png", "delete", "Delete", election_path(@election), :delete) %>
      <% end %>

      </div>
    </div>
    <br/>
	<div class="content">
		<h2 class="title">Ballots</h2>
		<%= render(:partial => "ballot_list") %>
	</div>
	<a name="contests"></a>
    <div class="content">
      <h2 class="title">Contests</h2>
      <%= render(:partial => 'contests/contest_list') %>
    </div>
	<a name="questions"></a>
   	<div class="content">
      <h2 class="title">Questions</h2>
      <%= render(:partial => 'questions/questions_list') %>
    </div>

  </div>
</div>
<% content_for :sidebar, render(:partial => 'sidebar') -%>
