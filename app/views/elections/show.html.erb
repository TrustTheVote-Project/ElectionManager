<div class="block">
    <div class="content">
        <div class="inner">
          <% ["display_name", "ident"].each do |fld| %>
            <%= ttv_show_field(@election, fld) %>
          <% end %>
          <%= ttv_actions_bar(Election, @election, [:edit, :delete, :back])%>
            <p>
                <%= link_to "#{t("ttv.download_all_ballots", :default => "Download All ballots")}", ballots_election_precinct_path(@election) %>
            </p>
            <p>
                <%= link_to "#{t("ttv.ballot_listing_file", :default => "Download Ballot Proofing File")}", ballot_proofing_election_path(@election, :format => "csv") %>
            </p>
        </div>
        <br/>
        
        <%= render :partial => "generic/index", :locals => { :ems_class => Ballot, :collection => @ballots, :columns => ["ballot", "n_contests", "n_questions"], :commands => [] } %>

        
        <div class="content">
            <h2 class="title">Ballots</h2>
            <%= render(:partial => "ballot_list") %>
        </div>
        <a name="contests"></a>
        <div class="content">
            <h2 class="title">Contests</h2>
            <%= render(:partial => 'contests/contest_list') %>
        </div>
        <a name="questions"></a>
        <div class="content">
            <h2 class="title">Questions</h2>
            <%= render(:partial => 'questions/questions_list') %>
        </div>
    </div>
</div>
<% content_for :sidebar, render(:partial => 'sidebar') -%>
