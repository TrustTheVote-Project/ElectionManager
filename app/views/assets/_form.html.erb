<div class="group">
  <%= f.label :ident, t("ttv.ident", :default => "Ident"), :class => :label %>
  <%= f.text_field :ident, :class => 'text_field' %>
  <span class="description">Name of asset</span>
</div>

<div class="group">
  <%= f.label :display_name, t("ttv.display_name", :default => "Display name"), :class => :label %>
  <%= f.text_field :display_name, :class => 'text_field' %>
  <span class="description">Name of asset</span>
</div>

<div class="group">
    <%= f.file_field :asset %>
</div>

<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
  </button>  
  <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.cancel", :default => "Cancel")}")} #{t("web-app-theme.cancel", :default => "Cancel")}", candidates_path, :class => "button" %> 
</div>