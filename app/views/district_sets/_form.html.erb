
  <div class="group">
    <%= f.label :display_name, t("ttv.display_name", :default => "Display name"), :class => :label %>
    <%= f.text_field :display_name, :class => 'text_field' %>
    <span class="description">Name of jurisdiction</span>
  </div>

  <div class="group">
    <%= f.label :secondary_name, t("ttv.secondary_name", :default => "Secondary name"), :class => :label %>
    <%= f.text_field :secondary_name, :class => 'text_field' %>
    <span class="description">Subtitle of jurisdiction, displayed below name</span>
  </div>
  
  <div class="group">
    <%= f.label :descriptive_text, t("ttv.descriptive_text", :default => "Descriptive text"), :class => :label %>
    <%= f.text_field :descriptive_text, :class => 'text_field' %>
    <span class="description">Description text to be displayed on jurisdiction selection page</span>
  </div>

  <div class="group">
    <% assets = Asset.find(:all, :order => :display_name) %>
    <%= f.label :logo_ident, t("ttv.logo", :default => "Logo"), :class => :label %>
    <%= f.collection_select(:logo_ident, assets, :ident, :display_name, :selected => :logo_ident) %>

    <span class="description">Optional logo for jurisdiction</span>
  </div>
  
<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
  </button>  
  <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.cancel", :default => "Cancel")}")} #{t("web-app-theme.cancel", :default => "Cancel")}", district_sets_path, :class => "button" %> 
</div>