
  <div class="group">
    <%= f.label :display_name, t("activerecord.attributes.ballot_style_template.display_name", :default => "Display name"), :class => :label %>
    <%= f.text_field :display_name, :class => 'text_field' %>
    <span class="description">Ballot style name</span>
  </div>

  <div class="group">
    <%= f.label :default_voting_method, t("activerecord.attributes.ballot_style_template.default_voting_method", :default => "Default voting method"), :class => :label %>
	<%= f.collection_select(:default_voting_method, VotingMethod.all, :id, :display_name) %>
    <span class="description">ID of default voting method. Ex: 0, 1, 2</span>
  </div>

  <div class="group">
    <%= f.label :instruction_image, t("activerecord.attributes.ballot_style_template.instruction_text", :default => "Instructions Image:"), :class => :label %>
    <%= f.file_field :instructions_image %>
	<%= image_tag(@ballot_style_template.instructions_image.url(:thumb)) %>
  
    <span class="description">Instructions for filling out ballots of this style</span>
  </div>

  <div class="group">
    <%= f.label :ballot_style, t("activerecord.attributes.ballot_style_template.ballot_style", :default => "Ballot style"), :class => :label %>
	<%= f.collection_select(:ballot_style, BallotStyle.all, :id, :display_name)%>
    <span class="description">Ballot style for this template. Ex. 0, 1, 2</span>
  </div>

  <div class="group">
    <%= f.label :default_language, t("activerecord.attributes.ballot_style_template.default_language", :default => "Default language"), :class => :label %>
	<%= f.collection_select(:default_language, Language.all, :id, :display_name) %>
    <span class="description">Default language for this template.</span>
  </div>

  <div class="group">
    <%= f.label :state_signature_image, t("activerecord.attributes.ballot_style_template.state_signature_image", :default => "State signature image"), :class => :label %>
    <%= f.text_field :state_signature_image, :class => 'text_field' %>
  </div>

  <div class="group">
    <%= f.label :pdf_form, t("activerecord.attributes.ballot_style_template.pdf_form", :default => "PDF Form enabled"), :class => :label %>
    <%= f.check_box :pdf_form %>
  </div>

  <div class="group">
    <%= f.label :medium_id, t("activerecord.attributes.ballot_style_template.medium_id", :default => "Medium"), :class => :label %>
	<%= f.collection_select(:medium_id, Medium.all, :id, :display_name) %>
    <span class="description">ID of medium for this template</span>
  </div>

  <div class="group">
    <%= f.label :state_signature_image, t("activerecord.attributes.ballot_style_template.ballot_title", :default => "Ballot Title"), :class => :label %>
    <%= f.text_field :ballot_title, :class => 'text_field' %>
  </div>
        
<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
  </button>  
  <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.cancel", :default => "Cancel")}")} #{t("web-app-theme.cancel", :default => "Cancel")}", ballot_style_templates_path, :class => "button" %> 
</div>
