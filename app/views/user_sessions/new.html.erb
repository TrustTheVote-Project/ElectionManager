<% content_for :title, "Login" %>
<p>Please login</p>
<% form_for @user_session do |f| %>
  <%= render_error_messages(@user_session) %>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
<%= link_to "Forgot your password?", new_password_reset_path, :method => :post %>


