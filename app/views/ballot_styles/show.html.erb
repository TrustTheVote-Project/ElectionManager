<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", ballot_styles_path  %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", ballot_style_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.ballot_style.display_name", :default => t("activerecord.labels.display_name", :default => "Display name")) %>:</b>
          <%= @ballot_style.display_name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.ballot_style.ballot_style_code", :default => t("activerecord.labels.ballot_style_code", :default => "Code")) %>:</b>
          <%= @ballot_style.ballot_style_code %>
        </p>

      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}")} #{t("web-app-theme.edit", :default=> "Edit")}", edit_ballot_style_path(@ballot_style), :class => "button" %> 
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>