<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", jurisdictions_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_jurisdiction_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.import", :default => "Import")}", import_jurisdiction_path %></li>

    </ul>
  </div>          
  <div class="content">            
    <h2 class="title"><%= t("web-app-theme.import", :default => "Import")%> into Jurisdiction</h2>
    <div class="inner">
			<% form_tag ({:action => 'import_file'}, {:method => 'put', :multipart => true}) do %>
				Choose file: <%= file_field_tag "import_file", :accept => "text/yml, text/xml, text/yaml" %>
				<br><br>Type: 
					<%= select_tag :type, options_for_select([["YAML", :yaml], ["XML", :xml]], :yaml) %>
        <br /> <br />
        <div class="group navform wat-cf">
          <button class="button" type="submit">
            <%= image_tag("web-app-theme/tick.png", :alt => "#{t("web-app-theme.save", :default => "Submit")}") %> <%= t("web-app-theme.save", :default => "Submit") %>
          </button>  
          <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.cancel", :default => "Cancel")}")} #{t("web-app-theme.cancel", :default => "Cancel")}", :back, :class => "button" %> 
        </div>
			<% end %>	
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>