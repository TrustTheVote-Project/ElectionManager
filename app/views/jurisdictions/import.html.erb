<div class="block">
    <div class="secondary-navigation">
        <ul class="wat-cf">
            <li class="first">
                <%= link_to "#{t("ttv.list", :default => "List")}", jurisdictions_path %>
            </li>
            <li>
                <%= link_to "#{t("ttv.new", :default => "New")}", new_jurisdiction_path %>
            </li>
            <li class="active">
                <%= link_to "#{t("ttv.import", :default => "Import")}", import_jurisdiction_path %>
            </li>
        </ul>
    </div>
    <div class="content">
        <h2 class="title"><%= t("ttv.import", :default => "Import") %> into Jurisdiction</h2>
        <div class="inner">
            <% form_tag ({:action => 'import_file'}, {:method => 'put', :multipart => true}) do %>
            Choose file: <%= file_field_tag "import_file", :accept => "text/yml, text/xml, text/yaml" %>
            <br>
            <br>
            File Format: <%= select_tag :format, options_for_select([["YAML", :yaml], ["XML", :xml]], :yaml) %>
            <br/>
            <br>
            File Contents: <%= select_tag :contents, 
					options_for_select([["Jurisdiction, Precincts, Splits and Districts", :jurisdiction_info], 
										["Election, Contest and Offices", :election_info],
										["Candidates", :candidate_info]], :jurisdiction_info) %>
            <br/>
			<br/>
            <div class="group navform wat-cf">
                <button class="button" type="submit">
                    <%= image_tag("web-app-theme/tick.png", :alt => "#{t("web-app-theme.save", :default => "Submit")}") %><%= t("web-app-theme.save", :default => "Submit") %>
                </button>
                <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.cancel", :default => "Cancel")}")} #{t("web-app-theme.cancel", :default => "Cancel")}", :back, :class => "button" %>
            </div>
            <% end %>
        </div>
    </div>
</div>
<% content_for :sidebar, render(:partial => 'sidebar') -%>