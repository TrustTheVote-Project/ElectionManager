<div class="left">
    <%= link_icon_for district_set %>
</div>
<div class="item">
    <h3><%= link_to district_set.display_name, set_jurisdiction_path(district_set) %></h3>
    <p>
        <% if district_set.descriptive_text.nil? || district_set.descriptive_text.empty? %>
          <%= district_set.display_name %><%= ", " + district_set.secondary_name unless district_set.secondary_name.nil? %>
          was created <%= district_set.created_at.strftime("%B %d, %Y, at %I:%M%p") %>. It contains <%= pluralize(district_set.elections.size, 'election') %>
          and <%= pluralize(district_set.districts.size, 'district') %> covering x precincts and y precinct splits.<% if district_set.elections.size >= 1 %>
          The <%= district_set.elections.size <= 5 ? district_set.elections.size : 5 %>
          most recently changed <%= district_set.elections.size == 1 ? "election" : "elections" %>
          in this district <%= district_set.elections.size == 1 ? "is" : "are" %>:<% elections = district_set.elections.sort {|x,y| x.updated_at <=> y.updated_at }[0..4] %>
          <% elections.each_with_index { |election, index| %>
          <%= "and " if index != 0 and index == elections.length - 1 %><%= link_to election.display_name, election %><%= index == elections.length - 1 ? "." : "," %>
          <% } %>
        <% end %>
        <% else %>
          <%= district_set.descriptive_text %>
        <% end %>
    </p>
</div>
