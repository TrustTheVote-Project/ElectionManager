<% content_for :title, "TrustTheVote registration"%>
<h1>Register with TrustTheVote</h1>
<%= render_error_messages @user , :verbose => false %>
<% form_for(@user) do |f| %>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>