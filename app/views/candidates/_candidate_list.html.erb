<div class="inner">
  <table class="table">
    <tr>
       <th>
        <%= t("ttv.display_name", :default => "Display Name") %>
      </th>
      <th>
        <%= t("ttv.party", :default => "Party") %>
      </th>
      <th>
        <%= t("ttv.contest", :default => "Contest") %>
      </th>
      <th class="last">
        &nbsp;
      </th>
    </tr>
    <% @candidates.each do |candidate| -%>
    <tr class="<%= cycle("odd", "even") %>">
      <td>
        <%= link_to candidate.display_name, candidate_path(candidate) %>
      </td>
      <td>
        <%= link_to candidate.party.display_name, party_path(candidate.party) %>
      </td>
      <td>
        <%= link_to candidate.contest.display_name, contest_path(candidate.contest) %>
      </td>
      <td class="last">
        <%= link_to "#{t("ttv.show", :default => "Show")}", candidate_path(candidate) %>|<%= link_to "#{t("ttv.edit", :default => "Edit")}", edit_candidate_path(candidate) %>|<%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", candidate_path(candidate), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </td>
    </tr>
    <% end -%>
  </table>
  <div class="actions-bar wat-cf">
    <div class="actions">
    </div>
    <%= will_paginate @candidates %>
  </div>
</div>
